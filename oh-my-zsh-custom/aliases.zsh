# my preferred ls
alias l='ls -lBh --color --group-directories-first --indicator-style=slash'
alias ll='ls -lABh --color --group-directories-first --indicator-style=slash'
alias la='ls -Ah --color --indicator-style=slash'

# misc
alias cp="cp -i"                       # confirm before overwriting something
alias df="df -h"                       # human-readable sizes
